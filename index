                    <input type="text" class="subject-name w-full md:w-1/3 p-2 rounded-md input-field text-xs" value="اردو" readonly>
                    <input type="number" class="marks-obtained w-full md:w-1/3 p-2 rounded-md input-field text-xs" placeholder="حاصل کردہ نمبر" min="0" max="100">
                    <input type="number" class="total-subject-marks w-full md:w-1/3 p-2 rounded-md input-field text-xs" placeholder="کل نمبر" min="0" max="100">
                </div>
                <div class="flex flex-col md:flex-row gap-2 subject-row">
                    <input type="text" class="subject-name w-full md:w-1/3 p-2 rounded-md input-field text-xs" value="سائنس" readonly>
                    <input type="number" class="marks-obtained w-full md:w-1/3 p-2 rounded-md input-field text-xs" placeholder="حاصل کردہ نمبر" min="0" max="100">
                    <input type="number" class="total-subject-marks w-full md:w-1/3 p-2 rounded-md input-field text-xs" placeholder="کل نمبر" min="0" max="100">
                </div>
                <div class="flex flex-col md:flex-row gap-2 subject-row">
                    <input type="text" class="subject-name w-full md:w-1/3 p-2 rounded-md input-field text-xs" value="ریاضی" readonly>
                    <input type="number" class="marks-obtained w-full md:w-1/3 p-2 rounded-md input-field text-xs" placeholder="حاصل کردہ نمبر" min="0" max="100">
                    <input type="number" class="total-subject-marks w-full md:w-1/3 p-2 rounded-md input-field text-xs" placeholder="کل نمبر" min="0" max="100">
