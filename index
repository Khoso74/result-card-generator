    <script>
        const formSection = document.getElementById('formSection');
        const resultSection = document.getElementById('resultSection');
        const subjectsContainer = document.getElementById('subjectsContainer');
        const generateResultBtn = document.getElementById('generateResultBtn');
        const downloadPdfBtn = document.getElementById('downloadPdfBtn');
        const emailResultBtn = document.getElementById('emailResultBtn');
        const goBackBtn = document.getElementById('goBackBtn');
        const resultCardContent = document.getElementById('resultCardContent');
        const displayStudentName = document.getElementById('displayStudentName');
        const displayRollNumber = document.getElementById('displayRollNumber');
        const displayStudentClass = document.getElementById('displayStudentClass');
        const displayDate = document.getElementById('displayDate');
        const displaySubjectsMarks = document.getElementById('displaySubjectsMarks');
        const displayTotalMarks = document.getElementById('displayTotalMarks');
        const displayPercentage = document.getElementById('displayPercentage');
        const displayGrade = document.getElementById('displayGrade');
        const displayStatus = document.getElementById('displayStatus');
        const displayOverallTotalMarks = document.getElementById('displayOverallTotalMarks');
        const displayOverallObtainedMarks = document.getElementById('displayOverallObtainedMarks');
        const emailAddressInput = document.getElementById('emailAddress');

        function generateResultCard() {
            const studentName = document.getElementById('studentName').value.trim();
            const rollNumber = document.getElementById('rollNumber').value.trim();
            const studentClass = document.getElementById('studentClass').value.trim();

            if (!studentName || !rollNumber || !studentClass) {
                alert("براہ کرم طالب علم کی تمام تفصیلات (نام، رول نمبر، کلاس) پُر کریں۔");
                return;
            }

            let totalMarksObtained = 0;
            let overallTotalPossibleMarks = 0;
            const subjectsData = [];
            let isValidInput = true;

            const subjectRows = subjectsContainer.querySelectorAll('.subject-row');
            subjectRows.forEach(row => {
                const subjectNameInput = row.querySelector('.subject-name');
                const marksObtainedInput = row.querySelector('.marks-obtained');
                const totalSubjectMarksInput = row.querySelector('.total-subject-marks');

                const subjectName = subjectNameInput.value.trim();
                const marksObtained = parseInt(marksObtainedInput.value);
                const totalSubjectMarks = parseInt(totalSubjectMarksInput.value);

                if (isNaN(totalSubjectMarks) || totalSubjectMarks <= 0) {
                    alert(`'${subjectName}' کے کل نمبر ایک مثبت عدد ہونے چاہئیں۔`);
                    isValidInput = false;
                    return;
                }
                if (isNaN(marksObtained) || marksObtained < 0 || marksObtained > totalSubjectMarks) {
                    alert(`'${subjectName}' کے حاصل کردہ نمبر 0 اور ${totalSubjectMarks} کے درمیان ہونے چاہئیں۔`);
                    isValidInput = false;
                    return;
                }

                subjectsData.push({ name: subjectName, obtained: marksObtained, total: totalSubjectMarks });
                totalMarksObtained += marksObtained;
                overallTotalPossibleMarks += totalSubjectMarks;
            });

            if (!isValidInput || subjectsData.length === 0) {
                alert("براہ کرم رزلٹ بنانے کے لیے کم از کم ایک درست مضمون اور نمبر شامل کریں۔");
                return;
            }

            const percentage = overallTotalPossibleMarks > 0 ? ((totalMarksObtained / overallTotalPossibleMarks) * 100).toFixed(2) : 0;
            const grade = calculateGrade(percentage);
            const status = percentage >= 40 ? 'پاس' : 'فیل';

            displayStudentName.textContent = studentName;
            displayRollNumber.textContent = rollNumber;
            displayStudentClass.textContent = studentClass;
            displayDate.textContent = new Date().toLocaleDateString('ur-PK', { year: 'numeric', month: 'long', day: 'numeric' });

            displaySubjectsMarks.innerHTML = '';
            subjectsData.forEach(subject => {
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td class="py-2 px-2 text-right">${subject.name}</td>
                    <td class="py-2 px-2 text-center">${subject.obtained}</td>
                    <td class="py-2 px-2 text-center">${subject.total}</td>
                `;
                displaySubjectsMarks.appendChild(row);
            });

            displayTotalMarks.textContent = totalMarksObtained;
            displayPercentage.textContent = `${percentage}%`;
            displayGrade.textContent = grade;
            displayStatus.textContent = status;
            displayStatus.classList.add(status === 'پاس' ? 'text-green-600' : 'text-red-600');

            displayOverallTotalMarks.textContent = overallTotalPossibleMarks;
            displayOverallObtainedMarks.textContent = totalMarksObtained;

            formSection.classList.add('hidden-section');
            resultSection.classList.remove('hidden-section');
            setTimeout(() => {
                formSection.style.display = 'none';
                resultSection.style.display = 'block';
            }, 500);
        }

        function calculateGrade(percentage) {
            if (percentage >= 90) return 'A+';
            if (percentage >= 80) return 'A';
            if (percentage >= 70) return 'B';
            if (percentage >= 60) return 'C';
            if (percentage >= 50) return 'D';
            if (percentage >= 40) return 'E';
            return 'F';
        }

        function downloadPdf() {
            const element = document.getElementById('formSection'); // فارم سیکشن کو استعمال کیا گیا
            setTimeout(() => {
                const opt = {
                    margin: [5, 5, 5, 5],
                    filename: 'اکیڈمی_رزلٹ_کارڈ.pdf',
                    image: { type: 'jpeg', quality: 0.95 },
                    html2canvas: {
                        scale: 0.5, // اسکیل کم کیا گیا
                        useCORS: true,
                        letterRendering: true,
                        width: 190,
                        windowWidth: document.body.scrollWidth
                    },
                    jsPDF: {
                        unit: 'mm',
                        format: [210, 297],
                        orientation: 'portrait',
                        putOnlyUsedFonts: true,
                        floatPrecision: 16
                    }
                };
                html2pdf().from(element).set(opt).toPdf().get('pdf').then(function (pdf) {
                    const totalPages = pdf.internal.getNumberOfPages();
                    for (let i = 1; i <= totalPages; i++) {
                        pdf.setPage(i);
                        pdf.setFontSize(10);
                        pdf.text('صفحہ ' + i + ' از ' + totalPages, 190, 287, { align: 'right' });
                    }
                    pdf.save();
                }).catch(error => console.error('PDF جنریشن میں خرابی:', error));
            }, 100);
        }

        function emailResultCard() {
            const studentName = document.getElementById('studentName').value.trim();
            const rollNumber = document.getElementById('rollNumber').value.trim();
            const studentClass = document.getElementById('studentClass').value.trim();
            const totalMarks = displayTotalMarks.textContent;
            const percentage = displayPercentage.textContent;
            const grade = displayGrade.textContent;
            const status = displayStatus.textContent;
            const recipientEmail = emailAddressInput.value.trim();

            if (!recipientEmail) {
                alert("براہ کرم ای میل ایڈریس درج کریں۔");
                return;
            }

            const emailBody = `
                <html>
                <head>
                    <style>
                        body { font-family: 'Poppins', 'Roboto', sans-serif; background-color: #f5f5f5; padding: 20px; }
                        .container { max-width: 600px; margin: 0 auto; background-color: #ffffff; padding: 20px; border-radius: 10px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1); }
                        h2 { color: #1f2937; text-align: center; }
                        p { color: #374151; line-height: 1.6; }
                        .highlight { color: #16a34a; font-weight: bold; }
                        .footer { text-align: center; color: #6b7280; margin-top: 20px; }
                    </style>
                </head>
                <body>
                    <div class="container">
                        <h2>اکیڈمی رزلٹ کارڈ - ${studentName}</h2>
                        <p>محترم والدین/سرپرست،</p>
                        <p>براہ کرم اپنے بچے کے تعلیمی نتائج درج ذیل ملاحظہ فرمائیں:</p>
                        <ul>
                            <li>طالب علم کا نام: ${studentName}</li>
                            <li>رول نمبر: ${rollNumber}</li>
                            <li>کلاس: ${studentClass}</li>
                            <li>کل حاصل کردہ نمبر: ${totalMarks}</li>
                            <li>فیصد: <span class="highlight">${percentage}</span></li>
                            <li>گریڈ: <span class="highlight">${grade}</span></li>
                            <li>حیثیت: <span class="highlight">${status}</span></li>
                        </ul>
                        <p class="footer">مخلص،<br>اکیڈمی انتظامیہ</p>
                    </div>
                </body>
                </html>
            `;

            const subject = encodeURIComponent(`Result Card for ${studentName} - Roll No: ${rollNumber}`);
            const body = encodeURIComponent(emailBody);
            const mailtoLink = `mailto:${recipientEmail}?subject=${subject}&body=${body}`;
            window.location.href = mailtoLink;
        }

        function goBackToForm() {
            resultSection.classList.add('hidden-section');
            formSection.classList.remove('hidden-section');
            setTimeout(() => {
                resultSection.style.display = 'none';
                formSection.style.display = 'block';
            }, 500);
        }

        generateResultBtn.addEventListener('click', generateResultCard);
        downloadPdfBtn.addEventListener('click', downloadPdf);
        emailResultBtn.addEventListener('click', emailResultCard);
        goBackBtn.addEventListener('click', goBackToForm);
    </script>
</body>
</html>
